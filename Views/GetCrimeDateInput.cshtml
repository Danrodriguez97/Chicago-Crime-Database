@page
@model GetCrimeDateInputModel
@{
  ViewData["Title"] = "Get Crime Date Input";
}

<div class="container">  
    <h2>Which date are you interested in?</h2>  
    <hr />  
    <br />  
		<form action="CrimeDate" method="get">
				
        <div class="row">  
            <div class="col-md-4">  
                <label asp-for="Input">Enter Date in MM/DD/YYYY Format:</label>  
                <input asp-for="Input" class="form-control" />  
            </div>  
        </div>   
				
        <br />  
        <input type="submit" value="Lookup" class="btn btn-primary" />  
        <a class="btn btn-default" href="/">Cancel</a>  
				
    </form>
</div>